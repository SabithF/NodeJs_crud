<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Sabith">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="id" value="" placeholder="sabi@c.c">
            
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" name="gender" value="Male">
                <label for="gender" class="radio-lable">Male</label>

            </div>
            <div class="radio inline">
                <input type="radio" name="gender" value="Female">
                <label for="gender" class="radio-lable">Female</label>

            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" value="Active">
                <label for="status" class="radio-lable">Active</label>

            </div>
            <div class="radio inline">
                <input type="radio" name="status" value="Inactive">
                <label for="status" class="radio-lable">Inactive</label>

            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
    
</form>